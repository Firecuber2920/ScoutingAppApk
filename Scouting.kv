<MyGridLayout>

    teamNum:teamNum
    pointsScored:pointsScored
    thoughts:thoughts

    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2

            Label:
                text: "Team Number"
            TextInput:
                id: teamNum
                multiline:

            Label:
                text: "Points scored"
            TextInput:
                id: pointsScored
                multiline:False

            Label:
                text: "Thoughts"
            TextInput:
                id: thoughts
                multiline:False

        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()